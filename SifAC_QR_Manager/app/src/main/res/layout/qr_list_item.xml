<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.sifac_qr_manager.model.QRCodeDataRecord" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:id="@+id/qrcode_summary_image"-->
<!--                android:layout_margin="5dp"-->
<!--                app:civ_border_width="2dp"-->
<!--                app:civ_border_color="@color/magenta"/>-->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="center">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/qrcode_summary_name"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:ems="10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="center"/>

                    <!--スキル表示-->
                    <com.sifac_qr_manager.view.ColorCircle
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        app:color="@color/colorAssist"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/qrcode_summary_smile_level"
                        android:ems="2"
                        android:layout_gravity="center"/>
                    <com.sifac_qr_manager.view.ColorCircle
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        app:color="@color/colorCamera"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/qrcode_summary_cool_level"
                        android:ems="2"
                        android:layout_gravity="center"/>
                    <com.sifac_qr_manager.view.ColorCircle
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        app:color="@color/colorStage"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/qrcode_summary_pure_level"
                        android:ems="2"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/qrcode_summary_character_name"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="2dp"
                            android:ems="5"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/qrcode_summary_costume"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:ems="9"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/qrcode_summary_music"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:ems="9"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>